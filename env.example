# ARC-FX Infrastructure API Configuration

# Server
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
API_VERSION=v1

# ARC Network
ARC_RPC_URL=https://rpc.testnet.arc.network
ARC_CHAIN_ID=12345
ARC_EXPLORER_URL=https://testnet.arcscan.app

# Database
DATABASE_URL=postgresql://arcfx:password@localhost:5432/arcfx
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
API_KEY_SALT=your-api-key-salt

# Smart Contracts (deployed addresses)
CONTRACT_SETTLEMENT=0x...
CONTRACT_PAYOUTS=0x...

# Compliance
ELLIPTIC_API_KEY=your-elliptic-api-key
ELLIPTIC_API_URL=https://api.elliptic.co
USE_MOCK_COMPLIANCE=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# CORS
CORS_ORIGIN=*

# Frontend URL (for NFT metadata external_url)
FRONTEND_URL=https://your-frontend-url.vercel.app

# Webhooks
WEBHOOK_SECRET=your-webhook-secret

# OpenAI / NFT Image Generation
OPENAI_API_KEY=sk-proj-...

# Storacha (Web3.Storage) / IPFS (https://console.storacha.network)
# Get these by running: storacha key create
STORACHA_PRIVATE_KEY=MgCZT5J...
# Get proof by running: storacha delegation create <your_did> --base64
STORACHA_PROOF=uEiCBwKPqjD...

# Optional: Bond NFT Contract
BOND_NFT_CONTRACT=0x...

# Operator/Private Key (for signing transactions)
PRIVATE_KEY=0x...
OPERATOR_PRIVATE_KEY=0x...

