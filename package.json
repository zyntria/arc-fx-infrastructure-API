{
  "name": "@arcfx/api",
  "version": "1.0.0",
  "description": "ARC-FX Infrastructure API - Programmable layer for deterministic multi-currency settlement on ARC Network",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "tsx scripts/migrate-db.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "contracts:compile": "cd contracts && forge build",
    "contracts:deploy": "cd contracts && forge script script/Deploy.s.sol --rpc-url $ARC_RPC_URL --broadcast",
    "contracts:test": "cd contracts && forge test",
    "docker:build": "docker build -t arcfx-api .",
    "docker:run": "docker-compose up"
  },
  "keywords": [
    "arc",
    "fx",
    "stablecoin",
    "settlement",
    "compliance",
    "fintech"
  ],
  "author": "ARC-FX Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@ipld/car": "^5.4.2",
    "@ucanto/core": "^10.4.6",
    "@web3-storage/w3up-client": "^13.0.0",
    "bs58": "^6.0.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "fastify": "^4.26.0",
    "ioredis": "^5.3.2",
    "node-fetch": "^2.7.0",
    "openai": "^4.104.0",
    "pg": "^8.11.3",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "ws": "8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
